= form_for @tips do |f|
  -if @tips.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tips.errors.count, "error")} prohibited this tips from being saved:"
      %ul
        - @tips.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nama
    = f.text_field :nama
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :content, 'Tips'
    = f.text_area :content
  .actions
    = f.submit 'Save'
