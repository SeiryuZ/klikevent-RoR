= form_for @subscriber do |f|
  -if @subscriber.errors.any?
    #error_explanation
      %h2= "#{pluralize(@subscriber.errors.count, "error")} prohibited this subscriber from being saved:"
      %ul
        - @subscriber.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.text_field :email, :placeholder => "Your Email Here", :class => "subscribe-input", :id => "input01", :size=> 30
  .actions
    = f.submit 'Subscribe', :class => "btn-large btn-primary text-center"
